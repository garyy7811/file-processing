<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="[ %t ] %d{yyyy-MM-dd HH:mm:ss,SSS/zzz}{America/New_York} %-5p [%c-%M-%L] %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger additivity="false" name="org.springframework" level="debug">
            <AppenderRef ref="CONSOLE"/>
        </Logger>
        <Logger additivity="false" name="org.springframework.integration" level="debug">
            <AppenderRef ref="CONSOLE"/>
        </Logger>
        <Logger additivity="false" name="com.amazonaws" level="debug">
            <AppenderRef ref="CONSOLE"/>
        </Logger>
        <Logger additivity="false" name="com.customshow" level="debug">
            <AppenderRef ref="CONSOLE"/>
        </Logger>
        <Root level="debug">
            <AppenderRef ref="CONSOLE"/>
        </Root>
    </Loggers>
</Configuration>